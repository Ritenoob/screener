# Miniature Enigma - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
CORS_ORIGIN=*

# Bot Mode: 'paper', 'live', 'backtest'
BOT_MODE=paper

# KuCoin API Configuration (required for live trading)
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_passphrase_here
KUCOIN_SANDBOX=false

# Screener Configuration
TOP_COINS_COUNT=100
MIN_VOLUME_24H=5000000
SCAN_INTERVAL_MS=60000
COOLDOWN_MS=300000

# Risk Management
MAX_DAILY_DRAWDOWN=0.03
MAX_OPEN_POSITIONS=5
LEVERAGE_DEFAULT=6
LEVERAGE_MAX=10
POSITION_SIZE_DEFAULT=0.02
POSITION_SIZE_MAX=0.05
STOP_LOSS_ROI=0.06
TAKE_PROFIT_ROI=0.15
CIRCUIT_BREAKER_THRESHOLD=3
LIQUIDATION_BUFFER=0.05

# Paper Trading Configuration
PAPER_INITIAL_BALANCE=10000
PAPER_TAKER_FEE=0.0006
PAPER_MAKER_FEE=0.0002
PAPER_SLIPPAGE=0.0001
